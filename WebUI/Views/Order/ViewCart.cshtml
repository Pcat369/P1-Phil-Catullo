
@model PlaceOrderViewModel


<table class="table">
   
    <thead>
        
        <tr>
                <td>
                    @Html.DisplayNameFor(modelItem => Model.Inventories[0].Product.Name)
                </td>
                <td>
                    @Html.DisplayNameFor(modelItem => Model.Inventories[0].Product.Description)
                </td>
                <td>
                    @Html.DisplayNameFor(modelItem => Model.Inventories[0].Product.Price)
                </td>
                <td>
                    @Html.DisplayNameFor(modelItem => Model.Inventories[0].SaleQuantity)
                </td>
                <td>
                </td>
            </tr>
    </thead>
        
    @for (var i = 0; i < Model.Inventories.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Inventories[i].Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Inventories[i].Product.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Inventories[i].Product.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Inventories[i].SaleQuantity)
            </td>
            <td>
            </td>
        </tr>
    }

</table>