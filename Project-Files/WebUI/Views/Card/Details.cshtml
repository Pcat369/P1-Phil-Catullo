@model Models.Card



    <div>
        <h4>Card</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Store)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Store.StoreID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.CustomerID)
            </dd>
            <dt class="col-sm-2">
                Total Price
            </dt>
            <dd class="col-sm-10">
                @Model.Items.Sum(x => x.Quantity * x.Product.Price)
            </dd>

        </dl>

        @foreach (var item in Model.Items)
        {
    <dl class="row">
        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @item.Product.Name
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @item.Quantity
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @item.Product.Price
        </dd>
        <dt class="col-sm-2">
            Total Price
        </dt>
        <dd class="col-sm-10">
            @(item.Product.Price * item.Quantity)
        </dd>

    </dl>
        }
        <form asp-controller="Order" asp-action="Create" asp-route-id="@Model.StoreId">
           
            <button type="submit">Complete Order</button>

        </form>
    </div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
