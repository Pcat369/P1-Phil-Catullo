@model IEnumerable<WebUI.Models.StoreVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Stores</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StoreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.StoreID)
            </th>
            <td>
                @Html.ActionLink("Inventory", "Index", "Inventory", new {id = item.StoreID}) |
                @Html.ActionLink("Edit", "Edit", new { id = item.StoreID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.StoreID })
            </td>
        </tr>
}
    </tbody>
</table>
   
