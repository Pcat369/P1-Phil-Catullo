@model WebUI.Models.PlaceOrderViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>@Html.DisplayFor(model => model.StoreName)</h1>
<p>@Html.DisplayFor(model => model.Address), @Html.DisplayFor(model => model.City)</p>

<p>
    <a asp-action="Create" asp-route-storeID="@Model.StoreID">Create New</a>
</p>
<form asp-controller="Card" method="post" asp-action="AddToCard">
    @Html.HiddenFor(modelItem => Model.StoreID)

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Inventories[0].Product.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inventories[0].Product.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inventories[0].Product.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inventories[0].Product.ProductID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inventories[0].Quantity)
                </th>
                <th>Order Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Inventories.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Inventories[i].Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Inventories[i].Product.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Inventories[i].Product.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Inventories[i].Product.ProductID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Inventories[i].Quantity)
                    </td>
                    <td>
                        @Html.TextBoxFor(modelItem => Model.Inventories[i].SaleQuantity)
                        @Html.HiddenFor(modelItem => Model.Inventories[i].ProductId)
                        @Html.HiddenFor(modelItem => Model.Inventories[i].InventoryId)
                        @Html.HiddenFor(modelItem => Model.Inventories[i].Product.Description)
                        @Html.HiddenFor(modelItem => Model.Inventories[i].Product.Price)
                        @Html.HiddenFor(modelItem => Model.Inventories[i].Product.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Inventory", new { id = Model.Inventories[i].InventoryId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = Model.Inventories[i].InventoryId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-default">Add to Cart</button>
</form>

